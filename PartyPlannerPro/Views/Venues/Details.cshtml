@model PartyPlannerPro.Models.Venue

@{
    ViewData["Title"] = "Details";
}

    <div>
        <h4>Venue Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
               <p> </p>
            </dt>
            <dd class="col-sm-10">
                <img src=" @Html.DisplayFor(model => model.ImageUrl)" style="height : 200px;width : 200px; " />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VenueName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VenueName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ContactPerson)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactPerson)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StreetAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StreetAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.State)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaxCapacity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaxCapacity)
            </dd>
        </dl>

        <div id="event-list">
            <h6>Upcoming Events:</h6>

            @*Loop through all of the events for this vendor that have not occurred yet*@
            <ul class="list-unstyled">
                @foreach (var Events in Model.Events)

                    if (Events.EventDate > DateTime.Now)
                    {
                <li>
                    <a asp-controller="Events" asp-action="Details"  asp-route-id="@Events.Id"> @Html.DisplayFor(model => Events.EventName)</a>
                </li>
                    }
            </ul>
        </div>
    </div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
