@model PartyPlannerPro.Models.ViewModels.EditImageVCViewModel

@{
    ViewData["Title"] = "Edit";
}


<h4>Edit Vendor Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="vendorCategory.Id" />
            <div class="form-group">
                <label asp-for="vendorCategory.CategoryName" class="control-label"></label>
                <input asp-for="vendorCategory.CategoryName" class="form-control" />
                <span asp-validation-for="vendorCategory.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
