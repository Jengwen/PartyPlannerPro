@model PartyPlannerPro.Models.VendorCategory

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Vendor Category Details</h4>
    <hr />
    <dl class="row">
        @if (Model.CategoryImage != null)
        {
            <dt>
               <p> </p>
            </dt>
            <dd class="col-sm-10">
                @{
                    var base64 = Convert.ToBase64String(Model.CategoryImage);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                }

                <img class="userImg" src="@imgSrc" />
            </dd>
        }
      
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
