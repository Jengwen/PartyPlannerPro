@model IEnumerable<PartyPlannerPro.Models.Vendor>

@{
    ViewData["Title"] = "Index";
}

<h1>Vendors</h1>


<p>
    <a asp-action="Create">Create New Vendor</a> | <a asp-controller="VendorCategories" asp-action="Create">Create a New Vendor Category</a>
</p>
@*Search vendors by city search box*@

<div class="form-group">
    <form asp-action="Index" class="form-inline">
        <input id="search-form" class="form-control mr-sm-2" input name="citySearch" type="search" placeholder="Search By City" aria-label="Search">

        <button id="search-btn" class="btn btn-light my-2 my-sm-0" type="submit">Search</button>
    </form>
    </div>
    @* Search by Category from dropdown list  *@
 <div class=" = form-group">
<form class="form-inline" >
   @Html.DropDownList("VendorCategoryId", ViewData["VendorCategoryId"] as List<SelectListItem>, "Search by Category" )
    <button id="search-btn" class="btn btn-light my-2 my-sm-0 ml-2" type="submit">Search</button>
</form>
</div>
   

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VendorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactPerson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VendorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactPerson)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
