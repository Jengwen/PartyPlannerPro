@model PartyPlannerPro.Models.Vendor

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Vendor Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VendorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VendorName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactPerson)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactPerson)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        </dt>
    </dl>
        @*Loop through all of the events for this vendor that have not occurred yet*@
    <div id="event-list">
        <h6>Upcoming Events:</h6>
        <ul class="list-unstyled">
            @foreach (var EventVendors in Model.EventVendors)

                if (EventVendors.Event.EventDate > DateTime.Now)
                {
            <li>
                <a asp-controller="Events" asp-action="Details" asp-route-id="@EventVendors.Event.Id">  @Html.DisplayFor(model => EventVendors.Event.EventName)</a>
            </li>
                }
        </ul>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
