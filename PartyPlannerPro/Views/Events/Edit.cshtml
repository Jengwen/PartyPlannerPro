@model PartyPlannerPro.Models.ViewModels.EditEventViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Event.Id" />
            <div class="form-group">
                <label asp-for="Event.EventName" class="control-label"></label>
                <input asp-for="Event.EventName" class="form-control" />
                <span asp-validation-for="Event.EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventDate" class="control-label"></label>
                <input asp-for="Event.EventDate" class="form-control" />
                <span asp-validation-for="Event.EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.CustomerId" class="control-label"></label>
                <select asp-for="Event.CustomerId" class="form-control" asp-items="Model.Customers" />
                <span asp-validation-for="Event.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Budget" class="control-label"></label>
                <input asp-for="Event.Budget" class="form-control" />
                <span asp-validation-for="Event.Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.TotalGuests" class="control-label"></label>
                <input asp-for="Event.TotalGuests" class="form-control" />
                <span asp-validation-for="Event.TotalGuests" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Event.VenueId" class="control-label"></label>
                <select asp-for="Event.VenueId" class="form-control" asp-items="Model.Venues"></select>
                <span asp-validation-for="Event.VenueId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Choose Vendors For This Event</label>
                <select multiple asp-for="@Model.SelectedVendors" class="form-control" asp-items="@Model.Vendors"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
