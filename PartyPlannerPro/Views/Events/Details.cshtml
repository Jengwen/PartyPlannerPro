@model PartyPlannerPro.Models.Event

@{
    ViewData["Title"] = "Details";
}

<h1>Event Details</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventDate)
        </dd>
        <dt class="col-sm-2">
            <h6>Customer</h6>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FirstName)
            @Html.DisplayFor(model => model.Customer.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalGuests)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalGuests)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venue.VenueName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue.VenueName)
        </dd>
    </dl>

    <div id="event-list">
        <h5>
            @Html.DisplayNameFor(model => model.EventVendors)
        </h5>
        <ul class="list-unstyled">
            @foreach (var EventVendors in Model.EventVendors)
            {
                <li>
                    <a asp-controller="Vendors" asp-action="Details" asp-route-id="@EventVendors.Vendor.Id"> @Html.DisplayFor(model => EventVendors.Vendor.VendorName)</a>
</li>
            }
        </ul>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
  <a asp-action="Index">Back to List</a>
</div>
